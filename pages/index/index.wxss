.body .suggestion .item .icon {
  margin: 0 0 25rpx;
}
.body .suggestion .item .icon image {
  width: 50rpx;
  height: 50rpx;
}
.body .day .item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  align-items: center;
  padding: 30rpx;
}
.body .day .item:last-child {
  border-bottom: 0;
}
.body .day image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.body .day .item .text {
  margin-left: 20rpx;
}
.body .day .item .temperature text:first-child {
  margin-right:10rpx;
}
.body .details {
  padding: 0;
}
.body .details .title {
  padding: 30rpx;
  font-weight: bold;
}
.body .details .list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-top:1px solid #F4F4F4;
}
.body .details .list .item {
  flex: 0 0 50%;
  position: relative;
}
.body .details .list .wrap {
  display: flex;
  padding: 45rpx;
}
.body .details .list .item:before {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background-color: #F4F4F4;
}

.body .details .list .item:after {
  content: "";
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #F4F4F4;
}
.body .details .list .item:nth-child(2n):before {
  width: 0;
}
.body .details .list .item:nth-last-child(-n+2):after {
  height: 0;
}
.body .details .list .item .column-l {
  flex: 0 0 80%;
}
.body .details .list .item .hd {
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.body .details .list .item .column-r {
  display: flex;
  align-items: center;
}
.body .details .list .item .icon {
  width: 50rpx;
  height: 50rpx;
}
.footer {
  padding: 20rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
.loding {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}
.loding image {
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translate(-50%,0);
}
