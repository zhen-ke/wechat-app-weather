/**index.wxss**/
page {
  background: #F1F1F1;
}
.weather-app {
  font-size: 28rpx;
  color: #333;
  position: relative;
  z-index: 10;
  padding: 20rpx;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.header .add {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  text-align: center;
  height: 50rpx;
}
.header .add image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.header .temperature {
  font-size: 120rpx;
  margin: 30rpx 0;
  position:relative;
}
.header .temperature span {
  position:absolute;
  top: 0;
  right:-50rpx;
}
.body .day,
.body .details {

  background: #fff;
  margin-bottom: 20rpx;
}
.body .suggestion {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.body .suggestion .list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
  border-top:1px solid #F4F4F4;
}
.body .suggestion .title {
  padding: 30rpx;
  font-weight: bold;
}
.body .suggestion .item {
  position: relative;
  flex: 0 0 25%;
}
.body .suggestion .item .wrap {
  padding: 30rpx;
}
.body .suggestion .item:before {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background-color: #F4F4F4;
}

.body .suggestion .item:after {
  content: "";
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #F4F4F4;
}
.body .suggestion .item:nth-child(4n):before {
  width: 0;
}
.body .suggestion .item:nth-last-child(-n+4):after {
  height: 0;
}


